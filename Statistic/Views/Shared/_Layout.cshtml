<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/RegisterForm.css" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <ul class="navbar-nav ">
                <li class="nav-item">
                    <a class="nav-link @ViewData["HomeActive"] " aria-current="page" asp-controller="NotificationApplication" asp-action="HomePage">На главную</a>
                </li>
                @if (@User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown">
                        <span class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Приложение
                        </span>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li class="nav-item"><a class="nav-link" asp-controller="NotificationApplication" asp-action="AddNewApplication">Добавить приложение</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="NotificationApplication" asp-action="GetApplicationsByUserId">Список Приложений</a></li>
                        </ul>

                    </li>
                }
            </ul>
            @if (@User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <span class="nav-link ">@User.Identity.Name</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  " asp-controller="Authentication" asp-action="SignOut">Выйти</a>
                    </li>
                </ul>
            }
            else
            {
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link @ViewData["LoginActive"] " asp-controller="Authentication" asp-action="LogIn">Авторизация</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @ViewData["SignupActive"] " asp-controller="Authentication" asp-action="SignUp">Регистрация</a>
                    </li>
                </ul>
            }
        </div>
    </nav>
    @RenderBody()
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/ApplicationValidator.js"></script>
    <script src="~/js/RegisterValidator.js"></script>
</body>
</html>
